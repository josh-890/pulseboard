generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Person {
  id          String @id @default(cuid())
  firstName   String
  lastName    String
  email       String @unique
  avatarColor String

  birthdate   DateTime?
  birthplace  String?

  stakeholderOf Project[]       @relation("ProjectStakeholder")
  leadOf        Project[]       @relation("ProjectLead")
  memberships   ProjectMember[]
  personas      Persona[]
  snapshot      PersonSnapshot?

  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@index([lastName, firstName])
  @@index([firstName, lastName])
  @@index([deletedAt])
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String
  status      ProjectStatus
  tags        String[]

  stakeholderId String
  stakeholder   Person @relation("ProjectStakeholder", fields: [stakeholderId], references: [id])
  leadId        String
  lead          Person @relation("ProjectLead", fields: [leadId], references: [id])
  members       ProjectMember[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([status])
  @@index([updatedAt])
  @@index([stakeholderId])
  @@index([leadId])
  @@index([deletedAt])
}

model ProjectMember {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  personId  String
  person    Person  @relation(fields: [personId], references: [id])

  deletedAt DateTime?

  @@unique([projectId, personId])
  @@index([personId])
  @@index([deletedAt])
}

model Activity {
  id    String       @id @default(cuid())
  title String
  time  DateTime
  type  ActivityType

  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@index([time])
  @@index([type])
  @@index([deletedAt])
}

enum ProjectStatus {
  active
  paused
  done
}

enum ActivityType {
  deploy
  note
  task
}

enum EntityType {
  person
  project
}

enum TraitAction {
  add
  remove
}

model TraitCategory {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?
  icon        String?

  traits PersonaTrait[]

  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@index([name])
  @@index([deletedAt])
}

model Persona {
  id            String   @id @default(cuid())
  personId      String
  person        Person   @relation(fields: [personId], references: [id])
  sequenceNum   Int
  effectiveDate DateTime
  note          String?

  jobTitle   String?
  department String?
  phone      String?
  address    String?

  traits PersonaTrait[]

  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@unique([personId, sequenceNum])
  @@index([personId, effectiveDate])
  @@index([personId, sequenceNum])
  @@index([deletedAt])
}

model PersonaTrait {
  id              String        @id @default(cuid())
  personaId       String
  persona         Persona       @relation(fields: [personaId], references: [id])
  traitCategoryId String
  traitCategory   TraitCategory @relation(fields: [traitCategoryId], references: [id])
  name            String
  action          TraitAction
  metadata        Json?

  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@index([personaId])
  @@index([traitCategoryId, name])
  @@index([deletedAt])
}

model PersonSnapshot {
  id        String @id @default(cuid())
  personId  String @unique
  person    Person @relation(fields: [personId], references: [id])

  jobTitle   String?
  department String?
  phone      String?
  address    String?

  activeTraits  Json // SnapshotTrait[]
  removedTraits Json // SnapshotRemovedTrait[]

  personaCount      Int
  latestPersonaDate DateTime?

  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  @@index([jobTitle])
  @@index([department])
  @@index([deletedAt])
}

model Setting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}

model Photo {
  id         String     @id @default(cuid())
  entityType EntityType
  entityId   String

  filename       String
  mimeType       String
  size           Int
  originalWidth  Int
  originalHeight Int
  variants       Json

  tags             String[]
  linkedEntityType String?
  linkedEntityId   String?

  caption    String?
  isFavorite Boolean   @default(false)
  sortOrder  Int       @default(0)

  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@index([entityType, entityId])
  @@index([entityType, entityId, isFavorite])
  @@index([deletedAt])
  @@index([tags], type: Gin)
}
